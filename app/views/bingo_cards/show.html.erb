    <style>
      table {
        border-radius: 32px 32px 32px 32px;
        background-color: #606060;
        margin-top: 30px;
        margin-left: auto;
        margin-right: auto;
      }
      th {
        background-color: #808080;
        height: 90px;
        text-align: center;
        font-size: 48pt;
        color: #e0e0e0;
        text-shadow: -2px -2px 0 #606060,	2px -2px 0 #606060,	-2px 2px 0 #606060,	2px 2px 0 #606060;
      }
      td {
        background-color: #e0e0e0;
        height: 130px;
        width: 150px;
        text-align: center;
        font-size: 14pt;
        color: #404040;
        padding: 5px;
      }
      .btn {
        width: 97px;
        height: 60px;
        border: 2px solid;
        border-radius: 8px;
        font-size: 16pt;
        text-align: center;
      }
      th:first-child { border-radius: 30px 0 0 0; }
      th:last-child { border-radius: 0 30px 0 0; }
      tr:last-child td:first-child { border-radius: 0 0 0 30px; }
      tr:last-child td:last-child { border-radius: 0 0 30px 0; }
      div {
        text-align: center;
        margin-top: 10px;
      }
      @media print {
        .btn { display: none; }
        th { background-color: #e0e0e0 !important; }
        td.covered { background-color: #e0e0e0 !important; }
        td.uncovered { background-color: #ffffff !important; }
      }
    </style>
  </head>
  <body>
    <table>
      <tr>
        <th>B</th><th>I</th><th>N</th><th>G</th><th>O</th>
      </tr>
      <tr>
        <td class="uncovered"><%= @word1 %></td>
        <td class="uncovered"><%= @word2 %></td>
        <td class="uncovered"><%= @word3 %></td>
        <td class="uncovered"><%= @word4 %></td>
        <td class="uncovered"><%= @word5 %></td>
