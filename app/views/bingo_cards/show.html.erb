      <tr>
        <td class="uncovered"><%= @word6 %></td>
        <td class="uncovered"><%= @word7 %></td>
        <td class="uncovered"><%= @word8 %></td>
        <td class="uncovered"><%= @word9 %></td>
        <td class="uncovered"><%= @word10 %></td>
      </tr>
      <tr>
        <td class="uncovered"><%= @word11 %></td>
        <td class="uncovered"><%= @word12 %></td>
        <td class="covered" id="free-space">FREE<br>SPACE</td>
        <td class="uncovered"><%= @word13 %></td>
        <td class="uncovered"><%= @word14 %></td>
      </tr>
      <tr>
        <td class="uncovered"><%= @word15 %></td>
        <td class="uncovered"><%= @word16 %></td>
        <td class="uncovered"><%= @word17 %></td>
        <td class="uncovered"><%= @word18 %></td>
        <td class="uncovered"><%= @word19 %></td>
      </tr>
      <tr>
        <td class="uncovered"><%= @word20 %></td>
        <td class="uncovered"><%= @word21 %></td>
        <td class="uncovered"><%= @word22 %></td>
        <td class="uncovered"><%= @word23 %></td>
        <td class="uncovered"><%= @word24 %></td>
      </tr>
    </table>
    <div>
      <input type="button" class="btn c060a0 ffc0e0" value="violet">
      <input type="button" class="btn a060c0 f0c0ff" value="indigo">
      <input type="button" class="btn 6080c0 c0e0ff" value="blue">
      <input type="button" class="btn 608060 e0ffe0" value="green">
      <input type="button" class="btn a0a060 ffffa0" value="yellow">
      <input type="button" class="btn c08040 ffe0a0" value="orange">
      <input type="button" class="btn e06080 ffc0d0" value="red">
