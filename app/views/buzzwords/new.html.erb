<h2>Add New Buzzwords</h2>
<%= form_with scope: :buzzword, url: buzzwords_path, local: true do |f| %>
  <p>
    <%= f.label :category %><br>
    <%= f.text_field :category, value: "Default"%>
  </p>
  <p>
    <%= f.label :buzzwords %><br>
    <%= f.text_area :buzzwords, rows: 20%>
  </p>
  <p>
    <%= f.submit "Add Buzzwords"%>
  </p>
<% end %>
